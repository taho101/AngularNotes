<md-toolbar class="md-warn">
 <div class="md-toolbar-tools">
	<h2 class="md-flex">Angular Notes</h2>
 </div>
</md-toolbar>

<!-- Notes list -->
<md-content flex layout-padding ng-controller="NotesController" >
		<md-content layout="row" layout-align="center center" flex>
			<md-input-container class="md-block" flex-gt-sm>
					<label>Create note</label>
					<input type="text" ng-model="Title" ng-model-instant />
			</md-input-container>
			
			<section layout="row">
						<md-button class="md-accent" ng-click="addNote()">Create note</md-button>
			</section>
		</md-content>
		
		<md-content class="md-padding" layout-xs="column" layout="row">
    		<div flex-xs flex-gt-xs="50" layout="column">
    			<md-card ng-repeat="note in notes">
	    			<md-card-title>
	          			<md-card-title-text>
	            			<span class="md-headline">{{note.title}}</span>
	            		</md-card-title-text>
	            	</md-card-title>
				</md-card>
			</div>
		</md-content>
</md-content>